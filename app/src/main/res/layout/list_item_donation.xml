<?xml version="1.0" encoding="utf-8"?>
<!-- 기부캠페인리스트 아이템 레이아웃 (2023-03-21 우진 수정) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/donation_listback"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:elevation="5dp"
        android:layout_margin="1dp">

        <ImageView
            android:id="@+id/ivDonationProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="3dp"
            android:src="@drawable/bear2"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="vertical"
            android:layout_gravity="center">

                    <TextView
                        android:id="@+id/titleName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="-2dp"
                        android:layout_marginRight="10dp"
                        android:text="'따뜻한 플레이' 캠페인(제목)"
                        android:textSize="17dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Google Play(단체명)"
                        android:textSize="15dp"
                        android:singleLine="true"
                        android:padding="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="기부된 걸음"
                            android:textSize="15dp"
                            android:padding="1dp" />

                        <TextView
                            android:id="@+id/nowStep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="75,084,212"
                            android:gravity="right"
                            android:textSize="15dp"
                            android:textColor="#84A7E4"
                            android:textStyle="bold"
                            android:singleLine="true"
                            android:padding="1dp" />
                    </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>