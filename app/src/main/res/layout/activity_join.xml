<?xml version="1.0" encoding="utf-8"?>
<!-- 회원가입 화면 (2023-01-01 이수 수정함.)-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 상단 화면
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#84A7E4" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Miracle Step"
            android:gravity="center"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:text="회원가입"
            android:textAlignment="center"
            android:textColor="#84A7E4"
            android:textSize="70px"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="50dp"
            android:gravity="left"
            android:text="E-mail"
            android:textSize="43px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="40px"
            android:inputType="textEmailAddress"
            android:hint="이메일을 입력해주세요." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="50dp"
            android:gravity="left"
            android:text="Password"
            android:textSize="43px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="40px"
            android:hint="비밀번호를 입력해주세요."
            android:inputType="textPassword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="50dp"
            android:gravity="left"
            android:text="Confirm Password"
            android:textSize="43px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etCFPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="40px"
            android:hint="비밀번호를 재입력해주세요."
            android:inputType="textPassword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="50dp"
            android:gravity="left"
            android:text="이름"
            android:textSize="43px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="40px"
            android:inputType="textPersonName"
            android:hint="이름을 입력해주세요." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="50dp"
            android:gravity="left"
            android:text="전화번호"
            android:textSize="43px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="40px"
            android:hint="전화번호를 입력해주세요."
            android:inputType="phone" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="50dp"
            android:gravity="left"
            android:text="키"
            android:textSize="43px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="40px"
            android:hint="키를 입력해주세요."
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:gravity="left"
            android:text="몸무게"
            android:textSize="43px"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="40px"
            android:hint="몸무게(kg)를 입력해주세요."
            android:inputType="number" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="53dp"
            android:layout_marginRight="50dp"
            android:gravity="left"
            android:text="생년월일"
            android:textSize="43px"
            android:textStyle="bold" />

            <DatePicker
                android:id="@+id/dpBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />

            <Button
                android:id="@+id/btnJoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#84A7E4"
                android:onClick="onClick"
                android:text="가입하기"
                android:textSize="40px" />
    </LinearLayout>
</ScrollView>