<?xml version="1.0" encoding="utf-8"?>
<!-- 키/몸무게 변경 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bmi_Tv_titlename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="키/몸무게 변경"
                android:textColor="#84A7E4"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="키"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/bmi_Et_cm"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="number"
                android:padding="10dp"
                android:hint="cm"
                android:textSize="16dp"
                android:background="@drawable/donation_back"/>

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="몸무게"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/bmi_Et_kg"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="kg"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="16dp"
                android:inputType="number"
                android:background="@drawable/donation_back"/>

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="BMI"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/bmi_Tv_BMI"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="BMI"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="16dp"
                android:inputType="phone"
                android:backgroundTint="#E6E6E6"
                android:background="@drawable/donation_back"/>

            <Button
                android:id="@+id/bmi_changeBtn"
                android:layout_width="190dp"
                android:layout_height="55dp"
                android:text="수정하기"
                android:backgroundTint="#84A7E4"
                android:layout_gravity="center"
                android:layout_marginTop="30dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>