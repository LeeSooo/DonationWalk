<?xml version="1.0" encoding="utf-8"?>
<!-- 설정 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/setting_Tv_titlename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:text="설정"
                android:textColor="#84A7E4"
                android:textStyle="bold"
                android:textSize="35dp"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/setting_Tv_info"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="회원정보/프로필 수정 >" />

                <TextView
                    android:id="@+id/setting_Tv_BMI"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="키/몸무게 수정 >"
                    android:background="@drawable/setting_backgound"/>

                <TextView
                    android:id="@+id/setting_Tv_Version"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="버전정보 >"
                    android:background="@drawable/setting_backgound"/>

                <TextView
                    android:id="@+id/setting_Tv_Logout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="로그아웃 >"
                    android:background="@drawable/setting_backgound"/>
                <TextView
                    android:id="@+id/setting_Tv_Exit"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="탈퇴하기 >"
                    android:background="@drawable/mypage_backgound"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>