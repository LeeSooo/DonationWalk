<?xml version="1.0" encoding="utf-8"?>
<!-- 랭킹 화면 (2023-03-21 우진 수정)-->
<?xml-stylesheet type="text/css" href="values.rankBackColor"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 광고 -->
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="FULL_BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>
    <!-- TestID : ca-app-pub-3940256099942544/6300978111 -->

    <!-- 상단 내 랭킹 부분 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2e5694"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="랭킹"
            android:textAlignment="center"
            android:textColor="#F3F3F3"
            android:textSize="40dp"
            android:textStyle="bold" />

        <!-- 내 걸음&기부 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 점수 "
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/tvMyPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/tvRankStep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginLeft="7dp"
                android:text="코인"/>
        </LinearLayout>

        <!-- 내 등수 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvMyRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:layout_marginLeft="7dp"
                android:paddingBottom="40dp"
                android:text="등"/>
        </LinearLayout>

    </LinearLayout>

    <!-- 랭킹 리스트 --> <!-- 전체, 기부, 걸음수 총 3개 버튼 배치 (inbody참고) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2e5694"
        android:orientation="horizontal">
        <android.widget.Button
            android:id="@+id/btnDonaRank"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17dp"
            android:background="@drawable/radius_button_rank"
            android:text="기부"/>
        <android.widget.Button
            android:id="@+id/btnStepRank"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17dp"
            android:background="@drawable/radius_button_rank"
            android:text="걷기"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- 클릭 버튼에 따라 변경 -->
        <TextView
            android:id="@+id/tvRankTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="전체 기부 랭킹"
            android:textColor="#3F51B5"
            android:textSize="23dp"
            android:textStyle="bold"/>
        <!-- 리사이클 뷰 등록 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRankList"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:scrollbarFadeDuration="0"
            android:scrollbarSize="5dp"
            android:scrollbarThumbVertical="@android:color/darker_gray"
            android:scrollbars="vertical"
            android:layout_weight="1">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>