<?xml version="1.0" encoding="utf-8"?>
<!-- 회원정보변경 화면 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info_Tv_titlename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="회원정보/프로필 수정"
                android:textColor="#84A7E4"
                android:textSize="30dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="※ 아이디(이메일)과 휴대폰 번호를 변경하시려는 \n 사용자는 고객센터로 문의바랍니다."
                android:textColor="#FF5252"
                android:textSize="14dp" />

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="아이디(이메일)"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/info_Tv_email"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:text="이메일"
                android:textSize="16dp"
                android:backgroundTint="#E6E6E6"
                android:background="@drawable/donation_back"/>

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/info_Tv_name"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="16dp"
                android:inputType="textPersonName"
                android:background="@drawable/donation_back"/>

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="휴대폰 번호"
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/info_Tv_phone"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textSize="16dp"
                android:inputType="phone"
                android:backgroundTint="#E6E6E6"
                android:background="@drawable/donation_back"/>

            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <Button
                android:id="@+id/info_passwordBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경"
                android:backgroundTint="#84A7E4"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="15dp" />

            <Button
                android:id="@+id/info_changeBtn"
                android:layout_width="190dp"
                android:layout_height="55dp"
                android:text="수정하기"
                android:backgroundTint="#84A7E4"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>